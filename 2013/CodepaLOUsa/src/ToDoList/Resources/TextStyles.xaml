<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBox">
       
        <Setter
            Property="Background"
            Value="Azure" />
        
    </Style>
    
    <Style TargetType="TextBlock" x:Key="obnoxiousLabel">

        <Setter
            Property="FontSize"
            Value="12" />

        <Setter
            Property="Foreground"
            Value="Black" />

        <Setter
            Property="FontFamily"
            Value="Arial" />

        <Setter
            Property="Margin"
            Value="0,0,15,0" />
        
        <Setter
            Property="VerticalAlignment"
            Value="Center" />

    </Style>

</ResourceDictionary>